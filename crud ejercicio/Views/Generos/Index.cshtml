@model List<crud_ejercicio.Models.Genero>

@{
    ViewData["Title"] = "Inicio";
}

<h1 style="color:deepskyblue">Inicio</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault(). Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @if (item.Estado == 1)
                {
                    <label>Activado</label>
                }
                else
                {
                     <label>Desactivado</label>
                }               
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Codigo }, new { onclick = "return confirm('¡Se editara esto!');" }) |
                @Html.ActionLink("Detalles", "Details", new { ide = item.Codigo }, new { onclick = "return confirm('¡se mostraran detalles!');" }) |

                @if (item.Estado == 1)
                {
                    @Html.ActionLink("Desactivar", "Desactivar", new { id = item.Codigo }, new { onclick = "return confirm('¡SE Desactivara ESTO!');" })

                }
                else
                {
                    @Html.ActionLink("Activar", "Activar", new { id = item.Codigo }, new { onclick = "return confirm('¡SE Activara ESTO!');" })

                }
            </td>
        </tr>
}
    </tbody>
</table>
